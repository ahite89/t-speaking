    <div class="large-6 columns">
      <a class="lightbox" href="<%= @question.score %>" data-lightbox="clef">
        <img id="score" src="<%= @question.score %>" />
      </a>
    </div>
    <div class="large-6 columns">
      <audio controls>
        <source src="<%= @question.audio %>">
